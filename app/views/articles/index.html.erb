<div class="container-fluid">
  <div class="navbar-header">
    <h3> <a class="navbar-brand">Wikinimous</a> <a class="navbar-collapse" href="/articles/new"> New Article</a></h3>
  </div>
</div>



<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
  <% @articles.each do |article| %>
  <div class="col mb-4">
    <div class="card">
       <%= content_tag :img, "", src: article.image, class: "card-img-top" %>
      <div class="card-body">
      <h5 class="card-title"><%= link_to article.title, article_path(article["id"]) %> </h5>
      <p class="card-text"> <%= article.content %> </p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

